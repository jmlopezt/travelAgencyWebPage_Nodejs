extends ../layout/index
block content
    main.container.mt-5
        h1.text-center.mt-5 #{page}
        .row
            .col-md-12
                include ../layout/partials/comments
                

            .col-md-12
                h2.text-center Add your comment
                if(errors)
                    each error in errors
                        .alert.alert-danger.text-center #{error.message}
                .row.justify-content-center
                    .col-md-8
                        form(action="/comments", method="post")
                            .form-group
                                label(for="name") Name
                                input(id="name", class="form-control",type="text", placeholder="Your name", name="name", value=name)
                            .form-group
                                label(for="mail") Email
                                input(id="mail", class="form-control",type="email", placeholder="Your email", name="email", value=email)
                            .form-group
                                label(for="message") Message
                                textarea#message(name="message", rows="3", placeholder="Your message", class="form-control")=message
                            input.btn.btn-success.btn-block(type="submit", value="Add")