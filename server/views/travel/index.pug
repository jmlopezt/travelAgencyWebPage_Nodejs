extends ../layout/index
block content
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${travel.image}_ln.jpg`, class="img-fluid")
            .col-md-7
                h1 #{travel.title}
                p
                    i.fas.fa-calendar-alt
                    |  #{travel.departureDate} - #{travel.returnDate}
                p
                    i.fas.fa-euro-sign
                    |  #{travel.price}
                p
                    i.fas.fa-users
                    |  #{travel.available} Available
                p #{travel.description.substr(0,1000)}
